<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">#000000</item>
        <item name="colorAccent">#FFFFFF</item>
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
    </style>
    <style name="DrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">true</item>
        <item name="color">@android:color/white</item>
    </style>
    <style name="CustomEditTextBorderTheme" parent="android:Widget.EditText">
        <item name="android:background">@drawable/edittext_drawable_border</item>
        <item name="android:textCursorDrawable">@drawable/cursor_edittext</item>
        <item name="android:paddingStart">8dp</item>
    </style>
    <style name="SpinnerTheme" parent="android:Widget.Spinner">
        <item name="android:background">@drawable/bg_spinner</item>
    </style>
    <style name="SpinnerBorderTheme" parent="android:Widget.Spinner">
        <item name="android:background">@drawable/spinner_background_new</item>
        <item name="android:popupBackground">@android:color/white</item>
        <item name="android:textColor">@color/colorText</item>
        <item name="android:spinnerMode">dropdown</item>
    </style>

</resources>